<%- include('partials/header') -%>

</head>
<body>
    <center><h1>Millionaire Attempts</h1></center>

    <center>
        <div id="user-list" style="border-radius:20px">
            <table>
                <thead>
                    <tr>
                        <th>USERNAME</th>
                        <th>DATE PLAYED</th>
                        <th>ATTEMPTS</th>
                    </tr>
                </thead>



            <% try { %>
                <thread>
                    <% userList.forEach(function(players) { %>
                        <tr>
                            <th class="username"><b><%= players.user %></b></th>
                            <th class="date"><%= players.datePlayed %></th>
                            <th class="attempts"><%= players.attempts %></th>
                        </tr>
                    <% }); %>
                </thread>
            <% } catch(err) { %>
                <p class="error">Error: message couldn't be printed</p>
            <% } %>
            </table>
        </div>
    </center>

    <center>
        <section>
            <a class="btn" href="/">Return to Home</a>
        </section>
          
        <%- include('partials/footer') -%>

    </center>
</body>
</html>
